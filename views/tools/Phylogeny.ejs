<% page_title = "Phylogenetic Tree Editor | Mxmbrook.co.uk"%>
<% breadcrumb = "Phylogenetic Tree Editor"%>
<% layout('layout/tools') %>
<article id="Phylogeny" class="fillWidth" style="display:table;vertical-align:middle;">
  <h1 id="PageTitle">Phylogenetic Tree Editor</h1>
  <div id="editorContainer" class="grid" style="margin:1em;grid-template-columns:0% 100%;height:525px">
    <div>
      <textarea class="noResize fillWidth" spellcheck="false" id="PhylogenyRawTreePane" hidden style="height:100%;padding:0;border:0;white-space: nowrap">
{
  "name":"Family",
  "taxa":
  [
    {
      "name":"Genus1",
      "taxa":
      [
        {
          "name":"Species1"
        },
        {
          "name":"Species2"
        }
      ]
    },
    {
      "name":"Genus2",
      "taxa":
      [
        {
          "name":"Species3"
        },
        {
          "name":"Species4"
        }
      ]
    }
  ]
}
      </textarea>
    </div>
    <div style="display: flex;flex-direction: column">
      <btn-group class="btn-group-square">
        <button id="PhylogenyToggleRawTreePane">> Source</button>
        <label> View: </label>
        <button id="PhylogenyResetView">🔍&#xFE0E; Reset View</button>
        <button id="PhylogenyToggleGrid"># Hide Grid</button>
        <button id="PhylogenyToggleFullScreen">🗖&#xFE0E; Full Screen</button>
        <label> Tree: </label>
        <button id="PhylogenyResetTree">🗑&#xFE0E; Reset Tree</button>
      </btn-group>
      <div id="PhylogenyCanvasParent" style="flex: 1;position: relative;overflow: hidden;height: 100%">
        <btn-group id="PhylogenyCanvasOverlay" style="position: absolute;top:0px;left:0px;" hidden>
          <button id="PhylogenyEditNode">Edit</button>
          <button id="PhylogenyAddNode">+</button>
          <button id="PhylogenyDeleteNode" class="btn-warning">🗑&#xFE0E;</button>
        </btn-group>
        <canvas id="PhylogenyCanvas" style="cursor:move;display: block;max-width: 100%"></canvas>
      </div>
      <p>&nbsp;&#x1f6c8; Click and drag to pan. Scroll to zoom</p>
    </div>
  </div>
  </div>
  <script src="/javascripts/Phylogeny.js"></script>
</article>
