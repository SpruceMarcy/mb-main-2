  .hexgrid{
    width: fit-content;
    display: grid;
    grid-template-columns: min-content min-content min-content min-content min-content min-content min-content ;
    margin: 5em auto 12em;
  }
  .hexgrid>*>* {
    font-size: 1vw;
  }
  .hexgrid>*>*>*{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    text-align: center;
  }
  .hexgrid>a {
    display: block;
    position: relative;
    filter: drop-shadow(0px 0px .28vw rgba(0, 0, 0, 0.7));
    width: 10vw;
    height: 8.63vw;
    color: #222;
    margin: 2.5vw 1vw;
    transition: transform .2s, filter .2s; /* Animation */
  }
  .hexgrid>a:hover {
    filter: drop-shadow(0px 7px 1vw rgba(0, 0, 0, 0.3));
  }
  .hexgrid>a:active {
    background-color: transparent;
    filter: drop-shadow(0px 7px 1vw rgba(255, 255, 255, 0.1));
  }
  .hexgrid>a>div{
    width: 10vw;
    height: 8.63vw;
    backdrop-filter: blur(5px);
    transition: transform .2s; /* Animation */
    clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
    background: radial-gradient(circle, rgba(239,255,255,0.65) 0%, rgba(210,247,255,0.65) 10%,rgba(129,135,165,0.65) 70%);
  }
  .hexsmall:nth-of-type(-2n+7){
    transform: translate(0,calc(50% + 2.5vw));
  }
  .hexsmall:nth-of-type(-2n+7):hover {
    transform: translate(0,calc(50% + 2.5vw)) scale(1.2);
    z-index: 1;
  }
  .hexsmall:hover {
    transform: scale(1.2);
    z-index: 1;
  }
  .hexbig{
    transform: scale(1.5);
  }
  .hexbig:hover{
    transform: scale(1.8);
    z-index: 1;
  }
  .hexbig:nth-of-type(-2n+7){
    transform: translate(0,calc(50% + 2.5vw)) scale(1.5);
  }
  .hexbig:nth-of-type(-2n+7):hover {
    transform: translate(0,calc(50% + 2.5vw)) scale(1.8);
    z-index: 1;
  }
  header{
    backdrop-filter: none;
    background-color: transparent;
    box-shadow: none;
